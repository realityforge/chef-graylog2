#! /bin/sh

# Installed by Chef => graylog2::default.rb

### BEGIN INIT INFO
# Provides:          graylog2
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the graylog2 java server
# Description:       starts graylog2-server
### END INIT INFO
#
#  Once installed, use "sudo update-rc.d graylog2 defaults" to enable!

GRAYLOG2JAR=<%= node[:graylog2][:basedir] %>/server/graylog2-server.jar
NAME=graylog2
DESC=graylog2
PID_FILE=/tmp/$NAME.pid
NOHUP=`which nohup`

test -x /usr/bin/java || exit 0

set -e

case "$1" in
  start)
	echo -n "Starting $DESC: "
	$NOHUP java -jar $GRAYLOG2JAR > /var/log/graylog2.log 2>&1 &
	echo "...started."
        ;;
  stop)
        echo -n "Stopping $DESC: "
	PID=`cat $PID_FILE`
	kill $PID
	echo "...stopped."
        ;;
  restart)
        echo -n "Restarting $DESC: "
        PID=`cat $PID_FILE`
        kill $PID
        $NOHUP java -jar $GRAYLOG2JAR > /var/log/graylog2.log 2>&1 &
	echo "...Restarted."
        ;;
  *)
        N=/etc/init.d/$NAME
        echo "Usage: $N {start|stop|restart}" >&2
        exit 1
        ;;
esac

exit 0
